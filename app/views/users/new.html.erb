<h1>Create new user</h1>
<ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<% if false %>

  <form accept-charset="UTF-8" action="/users" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="username">User name:</label>
    <input type="text" id="username" name="user[username]"><br><br>
    <label for="email">email:</label>
    <input type="email" id="email" name="user[email]"><br><br>
    <label for="password">password:</label>
    <input type="password" id="password" name="user[password]"><br><br>
    <label for="confirmpass">confirm password:</label>
    <input type="password" id="confirmpass" name="user[password_confirmation]"><br><br>
    <input type="submit" value="Create">
  </form>
<% end %>

<% if false%>
  <%= form_tag("/users", method: "POST") do %>
  <p><%= label_tag(:username, "User name:") %></p>
  <%= text_field_tag(:username) %>
  <p><%= label_tag(:email, "Email:") %></p>
  <%= email_field_tag(:email) %>
  <p><%= label_tag(:password, "Password:") %></p>
  <%= password_field_tag(:password) %>
  <p><%= label_tag(:password_confirmation, "Confirm Password:") %></p>
  <%= password_field_tag(:password_confirmation) %>
  <p><%= submit_tag("submit") %></p>
  <% end %>
<%end%>

<%= form_for(@user) do |f| %>
User name: <br><%= f.text_field :username %><br>
<p>Email: <br><%= f.email_field :email, placeholder: "some@yahoo.com"%><br></p>
<p>Password: <br><%= f.password_field :password%><br></p>
<p>Confirm Password: <br><%= f.password_field :password_confirmation%><br></p>
<%= f.submit%>
<%end%> 